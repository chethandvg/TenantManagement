@page "/products"
@using Archu.Web.Services
@inject IProductService ProductService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Products</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Products</MudText>

<MudPaper Elevation="2" Class="pa-4">
    <MudGrid>
        <MudItem xs="12" Class="d-flex justify-space-between align-center mb-4">
            <MudTextField @bind-Value="searchString" 
                         Placeholder="Search products..." 
                         Adornment="Adornment.Start" 
                         AdornmentIcon="@Icons.Material.Filled.Search" 
                         IconSize="Size.Medium" 
                         Class="mt-0"
                         Immediate="true"
                         OnValueChanged="@((string value) => OnSearch(value))"/>
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Primary" 
                      StartIcon="@Icons.Material.Filled.Add"
                      OnClick="@(() => NavigateToCreate())">
                Add Product
            </MudButton>
        </MudItem>
    </MudGrid>

    <LoadingContainer IsLoading="@isLoading" Message="Loading products...">
        @if (filteredProducts.Any())
        {
            <ProductGrid Products="@filteredProducts"
                        ShowActions="true"
                        OnEdit="HandleEdit"
                        OnDelete="HandleDelete" />
        }
        else if (!isLoading)
        {
            <MudAlert Severity="Severity.Info" Class="mt-4">
                @(string.IsNullOrWhiteSpace(searchString) ? "No products available." : "No products match your search.")
            </MudAlert>
        }
    </LoadingContainer>
</MudPaper>

@code {
    private bool isLoading = true;
    private List<ProductDto> products = new();
    private List<ProductDto> filteredProducts = new();
    private string searchString = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        try
        {
            // Use the injected service
            products = await ProductService.GetProductsAsync();
            filteredProducts = products;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading products: {ex.Message}", Severity.Error);
            
            // Fallback to mock data for demonstration
            products = new List<ProductDto>
            {
                new ProductDto { Id = 1, Name = "Product 1", Description = "Description for Product 1", Price = 29.99m, StockQuantity = 100 },
                new ProductDto { Id = 2, Name = "Product 2", Description = "Description for Product 2", Price = 49.99m, StockQuantity = 50 },
                new ProductDto { Id = 3, Name = "Product 3", Description = "Description for Product 3", Price = 99.99m, StockQuantity = 25 }
            };
            filteredProducts = products;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnSearch(string value)
    {
        searchString = value;
        
        if (string.IsNullOrWhiteSpace(searchString))
        {
            filteredProducts = products;
        }
        else
        {
            filteredProducts = products
                .Where(p => p.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase) ||
                           (p.Description?.Contains(searchString, StringComparison.OrdinalIgnoreCase) ?? false))
                .ToList();
        }
    }

    private void NavigateToCreate()
    {
        // TODO: Navigate to create product page or open dialog
        Snackbar.Add("Create product functionality to be implemented", Severity.Info);
    }

    private void HandleEdit(ProductDto product)
    {
        // TODO: Navigate to edit page or open dialog
        Snackbar.Add($"Edit '{product.Name}' - To be implemented", Severity.Info);
    }

    private async Task HandleDelete(ProductDto product)
    {
        var parameters = new DialogParameters
        {
            { "ContentText", $"Are you sure you want to delete '{product.Name}'? This action cannot be undone." },
            { "ButtonText", "Delete" },
            { "Color", Color.Error }
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small };
        var dialog = await DialogService.ShowAsync<ConfirmationDialog>("Confirm Delete", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                var success = await ProductService.DeleteProductAsync(product.Id);
                if (success)
                {
                    products.Remove(product);
                    OnSearch(searchString);
                    Snackbar.Add($"Product '{product.Name}' deleted successfully", Severity.Success);
                }
                else
                {
                    Snackbar.Add($"Failed to delete product '{product.Name}'", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting product: {ex.Message}", Severity.Error);
            }
        }
    }
}
