@page "/"

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Archu Application</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Rocket" Class="mr-2" />
                Getting Started
            </MudText>
            <MudText Typo="Typo.body1">
                Welcome to your new Blazor WebAssembly application built with MudBlazor and Archu.UI components.
            </MudText>
            <MudText Typo="Typo.body2" Class="mt-3">
                Explore the application using the navigation menu on the left.
            </MudText>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Layers" Class="mr-2" />
                Clean Architecture
            </MudText>
            <MudText Typo="Typo.body1">
                This application follows clean architecture principles with:
            </MudText>
            <MudList Dense="true">
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Blazor WebAssembly</MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle">MudBlazor UI Framework</MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Archu.UI Component Library</MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.CheckCircle">Separation of Concerns</MudListItem>
            </MudList>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h5" GutterBottom="true">
                <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
                Features
            </MudText>
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudIcon Icon="@Icons.Material.Filled.Palette" Size="Size.Large" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">Modern UI</MudText>
                            <MudText Typo="Typo.body2">Beautiful Material Design components</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Large" Color="Color.Secondary" />
                            <MudText Typo="Typo.h6">Fast Performance</MudText>
                            <MudText Typo="Typo.body2">Blazor WebAssembly for optimal speed</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudIcon Icon="@Icons.Material.Filled.Extension" Size="Size.Large" Color="Color.Tertiary" />
                            <MudText Typo="Typo.h6">Reusable Components</MudText>
                            <MudText Typo="Typo.body2">Shared UI library across platforms</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudIcon Icon="@Icons.Material.Filled.Security" Size="Size.Large" Color="Color.Success" />
                            <MudText Typo="Typo.h6">Type-Safe</MudText>
                            <MudText Typo="Typo.body2">Full C# type safety throughout</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>
