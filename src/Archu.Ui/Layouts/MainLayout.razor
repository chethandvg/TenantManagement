@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">@AppTitle</MudText>
        <MudSpacer />
        @TopBarContent
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        @DrawerContent
    </MudDrawer>
    
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    [Parameter]
    public string AppTitle { get; set; } = "Archu Application";

    [Parameter]
    public RenderFragment? TopBarContent { get; set; }

    [Parameter]
    public RenderFragment? DrawerContent { get; set; }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
