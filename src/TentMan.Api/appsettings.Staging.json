{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug"
    }
  },
  "Jwt": {
    "Issuer": "https://staging-api.tentman.com",
    "Audience": "https://staging-api.tentman.com",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "PasswordPolicy": {
    "MinimumLength": 10,
    "MaximumLength": 128,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "MinimumUniqueCharacters": 6,
    "PreventCommonPasswords": true,
    "PreventUserInfo": true
  },
  "ConnectionStrings": {
    "Comment": "Connection strings should be stored in Azure App Service Configuration or Key Vault"
  }
}
