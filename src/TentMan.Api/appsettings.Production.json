{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information",
      "TentMan": "Information"
    }
  },
  "Jwt": {
    "Issuer": "https://api.tentman.com",
    "Audience": "https://api.tentman.com",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "PasswordPolicy": {
    "MinimumLength": 12,
    "MaximumLength": 128,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "MinimumUniqueCharacters": 8,
    "PreventCommonPasswords": true,
    "PreventUserInfo": true
  },
  "KeyVault": {
    "Url": "https://tentman-keyvault.vault.azure.net/",
    "Comment": "JWT Secret, Admin Password, and Connection Strings should be stored in Azure Key Vault"
  },
  "ConnectionStrings": {
    "Comment": "Connection strings should be stored in Azure Key Vault or App Service Configuration"
  }
}
