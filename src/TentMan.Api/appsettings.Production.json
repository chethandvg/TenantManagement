{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information",
      "TentMan": "Information",
      "TentMan.Application.Billing": "Information",
      "TentMan.Application.BackgroundJobs": "Information",
      "Hangfire": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "https://api.tentman.com",
    "Audience": "https://api.tentman.com",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "PasswordPolicy": {
    "MinimumLength": 12,
    "MaximumLength": 128,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "MinimumUniqueCharacters": 8,
    "PreventCommonPasswords": true,
    "PreventUserInfo": true
  },
  "Hangfire": {
    "WorkerCount": 10,
    "ServerName": "TentManAPI-Production"
  },
  "BillingSettings": {
    "DefaultBillingDay": 1,
    "DefaultPaymentTermDays": 0,
    "DefaultProrationMethod": "ActualDaysInMonth"
  },
  "BackgroundJobs": {
    "MonthlyRentGeneration": {
      "Schedule": "0 2 26 * *",
      "TimeZone": "UTC",
      "DaysBeforeMonthStart": 5
    },
    "UtilityBilling": {
      "Schedule": "0 3 * * 1",
      "TimeZone": "UTC"
    }
  },
  "KeyVault": {
    "Url": "https://tentman-keyvault.vault.azure.net/"
  }
}
